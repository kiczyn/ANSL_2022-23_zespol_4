    </head>
    <body>
        <form action="/end" method="POST">
            <button name="end" id="end" type="submit"  hidden>Wyloguj</button>
        </form>
        
        <div class="main" id="main">
            <div>
                <div id="reka2" class="plansza"></div>
                <div class="plansza" id="p12"></div>
                <div class="hp" id="hp">

                    <table id="t1" >   
                        <th><p id="login" >GRACZ</p></th>
                        <th id="b1">20</th>
                    </table>

                    <p id="zloto">1</p>

                    <table id="t2">
