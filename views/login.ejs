<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css"   href="/css/particles.css">
        <link rel="stylesheet" type="text/css"   href="/css/login.css">
        <title>Pen & Sword - Card Game</title>
    </head>
    
    <body>

        <div id="particles-js"><canvas class="particles-js-canvas-el"></canvas></div>
        
        <div class="login-form">
            <form action="/login" method="post">
                <h1>Logowanie</h1>
                <div class="content">
                    <div class="input-field">
                        <input type="text" id="log" name="login" placeholder="LOGIN" autocomplete="nope" required>
                    </div>
                    <div class="input-field">
                        <input type="password" id="pw" name="haslo" placeholder="HASŁO" required>
                    </div>
                </div>
                <div class="action">
                    <button>
                        <a href="./register" class="button">Rejestracja</a>
                    </button>
                    <button type="submit">Zaloguj</button>
                </div>
            </form>
        </div>

        <script src="/scripts/particles.js"></script>
        <script src="/scripts/particles_theme.js"></script>
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <script>
            var urlParams = new URLSearchParams(window.location.search);
            if(urlParams.has('wrong') && urlParams.get('wrong')){
                Swal.fire({
                    icon: 'error',
                    title: 'Błąd...',
                    text: 'ZŁE HASŁO',
                }).then(()=>{
                console.log(window.location.hostname)
                window.location.replace(window.location.origin + '/login');
                })
            }else if(urlParams.has('error') && urlParams.get('error')){
                Swal.fire({
                    icon: 'error',
                    title: 'Błąd...',
                    text: 'BŁĄD!',
                }).then(()=>{
                console.log(window.location.hostname)
                window.location.replace(window.location.origin + '/login');
                })
            }
        </script>
    </body>
</html>