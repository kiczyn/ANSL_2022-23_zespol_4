<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css"   href="/css/particles.css">
        <link rel="stylesheet" type="text/css"   href="/css/login.css">
        <title>Pen & Sword - Card Game</title>
    </head>
    
    <body>
        <div id="particles-js"><canvas class="particles-js-canvas-el"></canvas></div>
        
        <div class="login-form">
            <form action="/register" method="post">
                <h1>Rejestracja</h1>
                <div class="content">
                    <div class="input-field">
                        <input type="text" id="log" name="login" placeholder="LOGIN" required>
                    </div>
                    <div class="input-field">
                        <input type="password" id="pw" name="haslo" placeholder="HASŁO" required>
                    </div>
                    <div class="input-field">
                        <input type="password" id="confirm_pw" placeholder="POTWIERDŹ HASŁO" required> 
                    </div>
                </div>
                <div class="action">
                    <button>
                        <a href="./login" class="button">Mam już konto</a>
                    </button>
                    <button type="submit">Zarejestruj</button>
                </div>
            </form>
        </div>
        
        <script src="/scripts/particles.js"></script>
        <script src="/scripts/particles_theme.js"></script>

        <script src="/scripts/validpasswd.js"></script>

    </body>
</html>